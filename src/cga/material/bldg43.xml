<?xml version="1.0"?>
<grammar type="material" version="1.0" author="Gen Nishida">
	<rule name="RoofTop">
		<setupProjection axesSelector="scope.xy">
			<param name="texWidth" type="absolute" value="5"/>
			<param name="texHeight" type="absolute" value="5"/>
		</setupProjection>
		<texture texturePath="material/bldg43/roof.png"/>
	</rule>
	<rule name="RoofSlant">
		<setupProjection axesSelector="scope.xy">
			<param name="texWidth" type="absolute" value="5"/>
			<param name="texHeight" type="absolute" value="5"/>
		</setupProjection>
		<texture texturePath="material/bldg43/roof.png"/>
	</rule>
	<rule name="RoofLedge">
		<color s="#aba9a5"/>
	</rule>
	<rule name="Wall">
		<texture texturePath="material/bldg43/wall.png"/>
	</rule>
	<rule name="WindowGlass">
		<texture texturePath="material/bldg43/window_glass.png"/>
	</rule>
	<rule name="WindowSill">
		<color s="#a08c78"/>
	</rule>
	<rule name="WindowFrame">
		<color s="#c4d1d7"/>
	</rule>
	<rule name="DoorGlass">
		<setupProjection axesSelector="scope.xy">
			<param name="texWidth" type="relative" value="1"/>
			<param name="texHeight" type="relative" value="1"/>
		</setupProjection>
		<texture texturePath="material/bldg43/door_glass.tif"/>
	</rule>
	<rule name="LedgeFace">
		<color s="#c4d1d7"/>
	</rule>
	<rule name="ChimneyWall">
		<color s="#573534"/>
	</rule>
	<rule name="ChimneyTop">
		<color s="#573534"/>
	</rule>
</grammar>
