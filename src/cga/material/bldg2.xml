<?xml version="1.0"?>
<grammar type="material" version="1.0" author="Gen Nishida">
	<rule name="RoofTop">
		<setupProjection axesSelector="scope.xy">
			<param name="texWidth" type="relative" value="1"/>
			<param name="texHeight" type="relative" value="1"/>
		</setupProjection>
		<texture texturePath="material/bldg2/roof.png"/>
	</rule>
	<rule name="RoofLedge">
		<color s="#c9b8a2"/>
	</rule>
	<rule name="Wall">
		<texture texturePath="material/bldg2/wall.png"/>
	</rule>
	<rule name="WindowGlass">
		<texture texturePath="material/bldg2/window_glass.png"/>
	</rule>
	<rule name="WindowSill">
		<color s="#c9b8a2"/>
	</rule>
	<rule name="WindowFrame">
		<color s="#f0e8e5"/>
	</rule>
	<rule name="DoorGlass">
		<setupProjection axesSelector="scope.xy">
			<param name="texWidth" type="relative" value="1"/>
			<param name="texHeight" type="relative" value="1"/>
		</setupProjection>
		<texture texturePath="material/bldg2/door_glass.png"/>
	</rule>
	<rule name="LedgeFace">
		<color s="#c9b8a2"/>
	</rule>
</grammar>
