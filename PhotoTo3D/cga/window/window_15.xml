<?xml version="1.0"?>
<grammar type="window" version="1.0" author="Gen Nishida">
	<attr name="window_depth" value="0.3" range="0.3,0.3"/>
	
	<rule name="Window">
		<extrude height="-window_depth*0.3"/>
		<comp>
			<param name="side" value="WindowFrame"/>
			<param name="top" value="WindowInsideBottom_15"/>
		</comp>
	</rule>
	<rule name="WindowInsideBottom_15">
		<split splitAxis="y">
			<param type="floating" value="0.75" name="WindowInsideBottomInside_15"/>
			<param type="relative" value="0.25" name="WindowFrame"/>
		</split>
	</rule>
	<rule name="WindowInsideBottomInside_15">
		<extrude height="-window_depth*0.7"/>
		<comp>
			<param name="side" value="WindowFrame"/>
			<param name="top" value="WindowGlassArea_15"/>
		</comp>
	</rule>
	<rule name="WindowGlassArea_15">
		<setupProjection axesSelector="scope.xy">
			<param name="texWidth" type="relative" value="1"/>
			<param name="texHeight" type="relative" value="1"/>
		</setupProjection>
		<split splitAxis="x">
			<param type="relative" value="0.2" name="WindowGlassColumnArea_15"/>
			<param type="relative" value="0.6" name="WindowGlassColumnArea_15"/>
			<param type="relative" value="0.2" name="WindowGlassColumnArea_15"/>
		</split>
	</rule>
	<rule name="WindowGlassColumnArea_15">
		<split splitAxis="y">
			<param type="relative" value="0.2" name="WindowGlassCellArea_15"/>
			<param type="relative" value="0.6" name="WindowGlassCellArea_15"/>
			<param type="relative" value="0.2" name="WindowGlassCellArea_15"/>
		</split>
	</rule>
	<rule name="WindowGlassCellArea_15">
		<split splitAxis="x">
			<param type="relative" value="0.025" name="WindowGlassSeparateTile_15"/>
			<param type="floating" value="1" name="WindowGlassCellColumnArea_15"/>
			<param type="relative" value="0.025" name="WindowGlassSeparateTile_15"/>
		</split>
	</rule>
	<rule name="WindowGlassCellColumnArea_15">
		<split splitAxis="y">
			<param type="relative" value="0.025" name="WindowGlassSeparateTile_15"/>
			<param type="floating" value="1" name="WindowGlass"/>
			<param type="relative" value="0.025" name="WindowGlassSeparateTile_15"/>
		</split>
	</rule>
	<rule name="WindowGlassSeparateTile_15">
		<extrude height="0.08"/>
		<comp>
			<param name="side" value="WindowFrame"/>
			<param name="top" value="WindowFrame"/>
		</comp>
	</rule>
</grammar>
