<?xml version="1.0"?>
<grammar type="window" version="1.0" author="Gen Nishida">
	<attr name="window_side_offset" value="0.05" range="0.05,0.05"/>
	<attr name="window_top_offset" value="0.05" range="0.05,0.05"/>

	<rule name="Window">
		<extrude height="-0.2"/>
		<comp>
			<param name="side" value="Wall"/>
			<param name="top" value="EntranceTop_18"/>
		</comp>
	</rule>
	<rule name="EntranceTop_18">
		<split splitAxis="y">
			<param type="relative" value="1-window_top_offset" name="EntranceTopMain_18"/>
			<param type="relative" value="window_top_offset" name="Wall"/>
		</split>
	</rule>
	<rule name="EntranceTopMain_18">
		<split splitAxis="x">
			<param type="relative" value="window_side_offset" name="Wall"/>
			<param type="relative" value="1-window_side_offset*2" name="EntranceTopMainMain_18"/>
			<param type="relative" value="window_side_offset" name="Wall"/>
		</split>
	</rule>
	<rule name="EntranceTopMainMain_18">
		<extrude height="-0.6"/>
		<comp>
			<param name="side" value="Wall"/>
			<param name="top" value="DoorGlass"/>
		</comp>
	</rule>
</grammar>