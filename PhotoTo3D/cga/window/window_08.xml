<?xml version="1.0"?>
<grammar type="window" version="1.0" author="Gen Nishida">
	<attr name="offset_size" value="0.05" range="0.05,0.05"/>
	<attr name="window_sill_height" value="0.05" range="0.05,0.05"/>
	
	<rule name="Window">
		<split splitAxis="y">
			<param type="relative" value="window_sill_height" name="WindowSillTile_08"/>
			<param type="relative" value="1-window_sill_height" name="WindowTileMain_08"/>
		</split>
	</rule>
	<rule name="WindowSillTile_08">
		<split splitAxis="y">
			<param type="relative" value="0.5" name="WindowSillTileLayer1_08"/>
			<param type="relative" value="0.5" name="WindowSillTileLayer2_08"/>
		</split>
	</rule>
	<rule name="WindowSillTileLayer1_08">
		<split splitAxis="x">
			<param type="relative" value="0.05" name="Wall"/>
			<param type="floating" value="1" name="WindowSillTileLayer1Main_08"/>
			<param type="relative" value="0.05" name="Wall"/>
		</split>
	</rule>
	<rule name="WindowSillTileLayer1Main_08">
		<extrude height="0.1"/>
		<comp>
			<param name="top" value="WindowSill"/>
			<param name="side" value="WindowSill"/>
		</comp>
	</rule>
	<rule name="WindowSillTileLayer2_08">
		<extrude height="0.2"/>
		<comp>
			<param name="top" value="WindowSill"/>
			<param name="side" value="WindowSill"/>
		</comp>
	</rule>
	<rule name="WindowTileMain_08">
		<split splitAxis="x">
			<param type="relative" value="0.05" name="Wall"/>
			<param type="floating" value="1" name="WindowTileMainMain_08"/>
			<param type="relative" value="0.05" name="Wall"/>
		</split>
	</rule>
	<rule name="WindowTileMainMain_08">
		<extrude height="0.1"/>
		<comp>
			<param name="side" value="WindowFrame"/>
			<param name="top" value="WindowTileMainMainTop_08"/>
		</comp>
	</rule>
	<rule name="WindowTileMainMainTop_08">
		<offset offsetDistance="-offset_size" inside="WindowTileMainMainTopInside_08" border="WindowFrame"/>
	</rule>
	<rule name="WindowTileMainMainTopInside_08">
		<extrude height="-0.1"/>
		<comp>
			<param name="side" value="WindowFrame"/>
			<param name="top" value="WindowTileMainMainTopInsideBottom_08"/>
		</comp>
	</rule>
	<rule name="WindowTileMainMainTopInsideBottom_08">
		<offset offsetDistance="-0.02" inside="WindowTileMainMainTopInsideBottomInside_08" border="WindowFrame"/>
	</rule>
	<rule name="WindowTileMainMainTopInsideBottomInside_08">
		<extrude height="-0.1"/>
		<comp>
			<param name="side" value="WindowFrame"/>
			<param name="top" value="WindowGlassArea_08"/>
		</comp>
	</rule>
	<rule name="WindowGlassArea_08">
		<setupProjection axesSelector="scope.xy">
			<param name="texWidth" type="relative" value="1"/>
			<param name="texHeight" type="relative" value="1"/>
		</setupProjection>
		<split splitAxis="x">
			<param type="relative" value="0.25" name="WindowGlassColumn_08"/>
			<param type="relative" value="0.5" name="WindowGlassColumn_08"/>
			<param type="relative" value="0.25" name="WindowGlassColumn_08"/>
		</split>
	</rule>
	<rule name="WindowGlassColumn_08">
		<split splitAxis="y">
			<param type="relative" value="0.7" name="WindowGlassCell_08"/>
			<param type="relative" value="0.3" name="WindowGlassCell_08"/>
		</split>
	</rule>
	<rule name="WindowGlassCell_08">
		<split splitAxis="x">
			<param type="relative" value="0.025" name="WindowGlassSeparateTile_08"/>
			<param type="floating" value="1" name="WindowGlassCellColumnArea_08"/>
			<param type="relative" value="0.025" name="WindowGlassSeparateTile_08"/>
		</split>
	</rule>
	<rule name="WindowGlassCellColumnArea_08">
		<split splitAxis="y">
			<param type="relative" value="0.025" name="WindowGlassSeparateTile_08"/>
			<param type="floating" value="1" name="WindowGlass"/>
			<param type="relative" value="0.025" name="WindowGlassSeparateTile_08"/>
		</split>
	</rule>
	<rule name="WindowGlassSeparateTile_08">
		<extrude height="0.1"/>
		<comp>
			<param name="side" value="WindowFrame"/>
			<param name="top" value="WindowFrame"/>
		</comp>
	</rule>
</grammar>
