<?xml version="1.0"?>
<grammar type="window" version="1.0" author="Gen Nishida">
    <attr range="0.15,0.1" value="0.15" name="window_side_offset"/>
    <attr range="0.15,0.15" value="0.15" name="window_top_offset"/>
    <rule name="Window">
        <extrude height="-0.2"/>
        <comp>
            <param value="Wall" name="side"/>
            <param value="EntranceTop_32" name="top"/>
        </comp>
    </rule>
    <rule name="EntranceTop_32">
        <split splitAxis="y">
            <param value="1-window_top_offset*0.5" type="relative" name="EntranceTopMain_32"/>
            <param value="window_top_offset*0.5" type="relative" name="Wall"/>
        </split>
    </rule>
    <rule name="EntranceTopMain_32">
        <split splitAxis="x">
            <param value="window_side_offset*0.5" type="relative" name="Wall"/>
            <param value="1-window_side_offset" type="relative" name="EntranceTopMainMain_32"/>
            <param value="window_side_offset*0.5" type="relative" name="Wall"/>
        </split>
    </rule>
    <rule name="EntranceTopMainMain_32">
        <extrude height="-0.2"/>
        <comp>
            <param value="Wall" name="side"/>
            <param value="Wall" name="top"/>
        </comp>
    </rule>
</grammar>