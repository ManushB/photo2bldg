<?xml version="1.0"?>
<grammar version="1.0" author="Gen Nishida">
	<!-- parameters -->
	<attr name="depth" value="10" range="4,50"/>
	<attr name="depth_offset_ratio" value="0.1" range="0.01,0.35"/>
	<attr name="height1" value="10" range="4,40"/>
	<attr name="height2" value="2" range="0.5,10"/>
	<attr name="width" value="10" range="4,50"/>
	<attr name="width_offset_ratio" value="0.1" range="0.01,0.35"/>

	<!-- building mass -->
	<rule name="Start">
		<copy name="Start2"/>
		<translate mode="rel" coordSystem="world">
			<param name="x" type="absolute" value="0"/>
			<param name="y" type="absolute" value="0"/>
			<param name="z" type="absolute" value="0"/>
		</translate>
		<size centered="true">
			<param name="xSize" type="absolute" value="width"/>
			<param name="ySize" type="absolute" value="depth"/>
			<param name="zSize" type="absolute" value="0"/>
		</size>
		<extrude height="height1"/>
		<comp>
			<param name="side" value="Facade"/>
			<param name="top" value="Roof"/>
			<param name="bottom" value="Base"/>
		</comp>
	</rule>
	<rule name="Start2">
		<translate mode="rel" coordSystem="world">
			<param name="x" type="absolute" value="0"/>
			<param name="y" type="absolute" value="0"/>
			<param name="z" type="absolute" value="height1"/>
		</translate>
		<size centered="true">
			<param name="xSize" type="absolute" value="width-width*width_offset_ratio*2"/>
			<param name="ySize" type="absolute" value="depth-depth*depth_offset_ratio*2"/>
			<param name="zSize" type="absolute" value="0"/>
		</size>
		<extrude height="height2"/>
		<comp>
			<param name="side" value="Wall"/>
			<param name="top" value="Roof"/>
			<param name="bottom" value="Base"/>
		</comp>
	</rule>
	
	<!-- material -->
	<rule name="Roof">
		<setupProjection axesSelector="scope.xy">
			<param name="texWidth" type="relative" value="1"/>
			<param name="texHeight" type="relative" value="1"/>
		</setupProjection>
		<texture texturePath="material/roof.tif"/>
	</rule>
</grammar>