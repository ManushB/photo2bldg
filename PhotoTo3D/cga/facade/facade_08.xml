<?xml version="1.0"?>
<grammar version="1.0" author="Gen Nishida">
	<!-- parameters -->
	<attr name="p00_num_floors" value="5" range="0,100"/>
	<attr name="p01_num_columns" value="6" range="0,100"/>
	<attr name="p02_window_width" value="0.4" range="0,100"/>
	<attr name="p03_window_height" value="0.4" range="0,100"/>
	<attr name="p04_tile_side_margin" value="0.3" range="0,100"/>
	<attr name="p05_tile_top_margin" value="0.3" range="0,100"/>
	<attr name="p06_tile_bottom_margin" value="0.3" range="0,100"/>
	<attr name="p07_floor_side" value="0.1" range="0,100"/>
	<attr name="p08_tile_width" value="0.1" range="0,100"/>
	<attr name="p09_tile_width2" value="0.1" range="0,100"/>
	<attr name="p10_top_wall_height" value="0.1" range="0,100"/>
	<attr name="p11_floor_height" value="0.1" range="0,100"/>
	<attr name="p12_base_height" value="0.1" range="0,100"/>
	<attr name="p13_tile_side_margin2" value="0.3" range="0,100"/>
	<attr name="p14_window_width2" value="0.4" range="0,100"/>
	<attr name="p15_tile_top_margin2" value="0.3" range="0,100"/>
	<attr name="p16_window_height2" value="0.4" range="0,100"/>
	<attr name="p17_tile_bottom_margin2" value="0.3" range="0,100"/>

	<!-- facade -->
	<rule name="Facade">
		<setupProjection axesSelector="scope.xy">
			<param name="texWidth" type="absolute" value="5"/>
			<param name="texHeight" type="absolute" value="5"/>
		</setupProjection>
		<split splitAxis="y">
			<param type="floating" value="p12_base_height" name="Wall"/>
			<param type="floating" value="p11_floor_height" name="Floor" repeat="true"/>
			<param type="floating" value="p10_top_wall_height" name="Wall" />
		</split>
	</rule>
	<rule name="Floor">
		<split splitAxis="x">
			<param type="floating" value="p07_floor_side" name="Wall"/>
			<param type="floating" value="p08_tile_width*2+p09_tile_width2" name="TileSet" repeat="true"/>
			<param type="floating" value="p07_floor_side" name="Wall"/>
		</split>
	</rule>
	<rule name="TileSet">
		<split splitAxis="x">
			<param type="floating" value="p08_tile_width" name="Tile"/>
			<param type="floating" value="p09_tile_width2" name="CenterTile"/>
			<param type="floating" value="p08_tile_width" name="Tile"/>
		</split>
	</rule>
	<rule name="CenterTile">
		<split splitAxis="y">
			<param type="floating" value="p17_tile_bottom_margin2" name="Wall"/>
			<param type="floating" value="p16_window_height2" name="CenterTile2"/>
			<param type="floating" value="p15_tile_top_margin2" name="Wall" />
		</split>
	</rule>
	<rule name="CenterTile2">
		<split splitAxis="x">
			<param type="floating" value="p13_tile_side_margin2" name="Wall"/>
			<param type="floating" value="p14_window_width2" name="WideWindow"/>
			<param type="floating" value="p13_tile_side_margin2" name="Wall" />
		</split>
	</rule>
	<rule name="Tile">
		<split splitAxis="y">
			<param type="floating" value="p06_tile_bottom_margin" name="Wall"/>
			<param type="floating" value="p03_window_height" name="Tile2"/>
			<param type="floating" value="p05_tile_top_margin" name="Wall" />
		</split>
	</rule>
	<rule name="Tile2">
		<split splitAxis="x">
			<param type="floating" value="p04_tile_side_margin" name="Wall"/>
			<param type="floating" value="p02_window_width" name="Window"/>
			<param type="floating" value="p04_tile_side_margin" name="Wall" />
		</split>
	</rule>
</grammar>