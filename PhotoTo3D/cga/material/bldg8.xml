<?xml version="1.0"?>
<grammar type="material" version="1.0" author="Gen Nishida">
	<rule name="RoofTop">
		<setupProjection axesSelector="scope.xy">
			<param name="texWidth" type="relative" value="1"/>
			<param name="texHeight" type="relative" value="1"/>
		</setupProjection>
		<texture texturePath="material/bldg8/roof.tif"/>
	</rule>
	<rule name="RoofLedge">
		<color s="#b7a9a4"/>
	</rule>
	<rule name="Wall">
		<texture texturePath="material/bldg8/wall.png"/>
	</rule>
	<rule name="WindowGlass">
		<texture texturePath="material/bldg8/window_glass.png"/>
	</rule>
	<rule name="WindowSill">
		<color s="#b7a9a4"/>
	</rule>
	<rule name="WindowFrame">
		<color s="#b7a9a4"/>
	</rule>
	<rule name="DoorGlass">
		<setupProjection axesSelector="scope.xy">
			<param name="texWidth" type="relative" value="1"/>
			<param name="texHeight" type="relative" value="1"/>
		</setupProjection>
		<texture texturePath="material/bldg8/door_glass.tif"/>
	</rule>
	<rule name="LedgeFace">
		<color s="#b7a9a4"/>
	</rule>
</grammar>
